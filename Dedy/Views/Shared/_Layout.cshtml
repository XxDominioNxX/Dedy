<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Memorial57</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <div style="min-height: 100%;">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow m-0">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Memorial57</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="ShowProducts" asp-action="CatalogPamyat">Каталог</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Contacts">Контакты</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="About">О компании</a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white ml-3">+7(910)-748-74-38</a>
                        </li>
                    </ul>



                </div>
            </nav>
        </header>
        <div>
            <main role="main" style="padding-bottom: 100px;">
                @RenderBody()
            </main>
        </div>


        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)



    </div>


    <footer class="footer position-static" style="margin-top: -100px; height: 100px; ">

        <div class="bg-dark p-md-4">
            <div class="row">
                <div class="col-lg-2" style="vertical-align:middle;">
                    <p class="text-white">© 2018 Gendalf</p>
                </div>
                <div class="col-lg-4">

                </div>
                <div style="float:right">
                    <iframe src="https://yandex.ru/map-widget/v1/?um=constructor%3A60f56cb897483d0aab8212f698fe003506ab45e6d2e5eb7e3a2e41ef58630976&amp;source=constructor" width="400" height="240" frameborder="0" style="border:0; border-radius:20px;" allowfullscreen="" loading="lazy"></iframe>
                </div>

            </div>
        </div>

    </footer>
</body>
</html>
